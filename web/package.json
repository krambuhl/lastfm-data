{
  "name": "lastfm-web",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "scripts": {
    "start": "serve dist",
    "clean": "rm -rf dist && mkdir dist",
    "build": "npm-run-all build:*",
    "build:copy": "cpx public/** dist ",
    "build:css": "postcss styles/styles.css -o dist/assets/styles.css",
    "build:app": "cd app && elm-make Main.elm --output ../dist/assets/app.js",
    "dev": "npm-run-all --parallel dev:*",
    "dev:copy": "cpx public/** dist -w",
    "dev:css": "postcss styles/styles.css -o dist/assets/styles.css -w",
    "dev:app": "cd app && elm-reactor"
  },
  "browserify": {
    "transform": [
      "hbsify"
    ]
  },
  "dependencies": {
    "browserify": "^14.3.0",
    "cpx": "^1.5.0",
    "elm": "^0.18.0",
    "hbsify": "^1.0.1",
    "npm-run-all": "^4.0.2",
    "postcss-cli": "^4.0.0",
    "postcss-cssnext": "^2.11.0",
    "postcss-import": "^10.0.0",
    "reset-css": "^2.2.0",
    "serve": "^5.1.4",
    "watchify": "^3.9.0",
    "whatwg-fetch": "^2.0.3"
  }
}
